{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "blocks": [
    {
      "alignment": "left",
      "segments": [
        {
          "foreground": "{{colors.tertiary.default.hex}}",
          "options": {
            "time_format": "15:04:05"
          },
          "style": "plain",
          "template": "[{{ .CurrentDate | date .Format }}]",
          "type": "time"
        },
        {
          "foreground": "{{colors.tertiary.default.hex}}",
          "style": "plain",
          "template": " \uf0e7 ",
          "type": "root"
        },
        {
          "foreground": "{{colors.on_surface.default.hex}}",
          "background": "{{colors.on_primary_fixed.default.hex}}",
          "options": {
            "style": "agnoster"
          },
          "style": "plain",
          "template": " {{ .PWD }} on",
          "type": "path"
        },
        {
          "background": "{{colors.on_primary_fixed_variant.default.hex}}",
          "options": {
            "branch_gone_icon": "\u274e",
            "branch_identical_icon": "\uf14a"
          },
          "style": "plain",
          "template": " {{ .HEAD }} ",
          "type": "git"
        },
        {
          "foreground": "{{colors.on_surface.default.hex}}",
          "style": "plain",
          "template": "x{{ reason .Code }} ",
          "type": "status"
        },
        {
          "foreground": "{{colors.surface.default.hex}}",
          "style": "plain",
          "template": " \u276f ",
          "type": "text"
        }
      ],
      "type": "prompt"
    }
  ],
  "version": 4
}
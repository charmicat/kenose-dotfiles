{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "palette": {
    "bg": "#000000",
    "fg": "#ffffff",
    "fg_muted": "#888888",
    "accent": "#ffffff",
    "accent2": "#ffffff",
    "accent3": "#ffffff",
    "error": "#ff0000"
  },
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "type": "time",
          "style": "plain",
          "foreground": "p:fg_muted",
          "template": "[{{ .CurrentDate | date .Format }}]",
          "options": {
            "time_format": "15:04:05"
          }
        },
        {
          "type": "text",
          "style": "plain",
          "foreground": "p:fg",
          "template": " "
        },
        {
          "type": "session",
          "style": "diamond",
          "foreground": "#ffffff",
          "background": "#c386f1",
          "leading_diamond": "",
          "trailing_diamond": "",
          "template": "{{ if .SSHSession }} {{ end }}{{ .UserName }}"
        },
        {
          "type": "text",
          "style": "plain",
          "foreground": "p:accent2",
          "template": "{{ .HostName }}"
        },
        {
          "type": "text",
          "style": "plain",
          "foreground": "p:fg",
          "template": " "
        },
        {
          "type": "python",
          "style": "powerline",
          "powerline_symbol": "",
          "foreground": "p:accent",
          "background": "p:accent2",
          "options": {
            "prefix": " \uE235 ",
            "display_version": true,
            "display_virtual_env": true,
            "display_mode": "context"
          }
        },
        {
          "type": "svn",
          "style": "powerline",
          "powerline_symbol": "",
          "foreground": "p:accent",
          "background": "p:accent2",
          "options": {
            "fetch_status": true
          }
        },
        {
          "type": "path",
          "style": "plain",
          "foreground": "p:accent",
          "template": "{{ .PWD }}",
          "options": {
            "style": "agnoster"
          }
        },
        {
          "type": "git",
          "style": "plain",
          "foreground": "p:accent3",
          "template": " {{ .HEAD }}",
          "options": {
            "branch_gone_icon": "✎",
            "branch_identical_icon": "✓"
          }
        },
        {
          "type": "status",
          "style": "plain",
          "foreground": "p:error",
          "template": " x{{ reason .Code }} ",
          "options": {
            "display_exit_code": true,
            "always_enabled": false
          }
        },
        {
          "type": "root",
          "style": "plain",
          "foreground": "p:error",
          "template": " \uf0e7 ",
          "powerline_symbol": "",
          "background": "p:accent2"
        },
        {
          "type": "text",
          "style": "plain",
          "foreground": "p:fg_muted",
          "template": " \\$ "
        },
        {
          "type": "python",
          "style": "powerline",
          "powerline_symbol": "",
          "foreground": "#ffd43b",
          "background": "#306998",
          "template": "  {{ .Full }} "
        }
      ]
    }
  ],
  "debug_prompt": {
    "background": "transparent",
    "foreground": "#ffffff",
    "template": "Debugging "
  },
  "final_space": true,
  "version": 4
}
{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "palette": {
    "fg": "#e2e2e9",
    "fg_muted": "#c4c6d0",
    "accent": "#adc6ff",
    "accent2": "#bfc6dc",
    "accent3": "#debcdf",
    "error": "#ffb4ab",
    "source": "#4285f4"
  },
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "type": "time",
          "style": "plain",
          "foreground": "p:fg_muted",
          "template": "[{{ .CurrentDate | date .Format }}]",
          "options": {
            "time_format": "15:04:05"
          }
        },
        {
          "type": "text",
          "style": "plain",
          "foreground": "p:fg",
          "template": " "
        },
        {
          "type": "session",
          "style": "plain",
          "foreground": "p:accent2",
          "leading_diamond": "",
          "trailing_diamond": "",
          "template": "{{ if .SSHSession }} {{ .UserName }} {{ end }}"
        },
        {
          "type": "text",
          "style": "plain",
          "foreground": "p:fg",
          "template": " "
        },
        {
          "type": "text",
          "style": "plain",
          "foreground": "p:accent2",
          "template": " {{ .HostName }}"
        },
        {
          "type": "text",
          "style": "plain",
          "foreground": "p:fg",
          "template": " "
        },
        {
          "type": "python",
          "style": "plain",
          "powerline_symbol": "",
          "foreground": "p:accent",
          "background": "p:accent2",
          "options": {
            "prefix": "  ",
            "display_version": true,
            "display_virtual_env": true,
            "display_mode": "context"
          }
        },
        {
          "type": "text",
          "style": "plain",
          "foreground": "p:fg",
          "template": " "
        },
        {
          "type": "svn",
          "style": "plain",
          "powerline_symbol": "",
          "foreground": "p:accent",
          "background": "p:accent2",
          "options": {
            "fetch_status": true
          }
        },
        {
          "type": "text",
          "style": "plain",
          "foreground": "p:fg",
          "template": " "
        },
        {
          "type": "path",
          "style": "plain",
          "foreground": "p:accent",
          "template": " {{ .PWD }}",
          "options": {
            "style": "agnoster"
          }
        },
        {
          "type": "text",
          "style": "plain",
          "foreground": "p:fg",
          "template": " "
        },
        {
          "type": "git",
          "style": "plain",
          "foreground": "p:accent3",
          "template": " {{ .HEAD }}",
          "options": {
            "branch_gone_icon": "✎",
            "branch_identical_icon": "✓"
          }
        },
        {
          "type": "text",
          "style": "plain",
          "foreground": "p:fg",
          "template": " "
        },
        {
          "type": "status",
          "style": "plain",
          "foreground": "p:error",
          "template": " x{{ reason .Code }}",
          "options": {
            "display_exit_code": true,
            "always_enabled": false
          }
        },
        {
          "type": "text",
          "style": "plain",
          "foreground": "p:fg",
          "template": " "
        },
        {
          "type": "root",
          "style": "plain",
          "foreground": "p:error",
          "template": "  ",
          "powerline_symbol": "",
          "background": "p:accent2"
        },
        {
          "type": "text",
          "style": "plain",
          "foreground": "p:fg_muted",
          "template": " $"
        }
      ]
    }
  ],
  "debug_prompt": {
    "background": "transparent",
    "foreground": "#ffffff",
    "template": "Debugging "
  },
  "final_space": true,
  "version": 4
}
